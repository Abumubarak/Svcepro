<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="svce.svcepro.clubs"
    android:background="#ffffff">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:text="HOPE"
        android:id="@+id/hope"
        android:layout_below="@+id/leo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:background="#fbf03d97" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:text="RED CROSS"
        android:id="@+id/rc"
        android:layout_below="@+id/hope"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:background="#fbf03d97" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:text="OTHERS"
        android:id="@+id/button6"
        android:layout_below="@+id/rc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fbf03d97" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="CluBs"
        android:id="@+id/textView"
        android:textSize="60dp"
        android:textAlignment="center"
        android:background="#ffffff"
        android:textStyle="bold"
        android:typeface="normal"
        android:textColor="#deab15"
        android:autoText="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:text="NSS"
        android:id="@+id/nss"
        android:layout_marginTop="37dp"
        android:background="#fbf03d97"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:text="NCC"
        android:id="@+id/ncc"
        android:background="#fbf03d97"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:text="LEO CLUB"
        android:id="@+id/leo"
        android:background="#fbf03d97"
        android:layout_below="@+id/ncc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
